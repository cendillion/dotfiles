general {
        output_format = i3bar
        colors = true
        interval = 5
}

#order += "ipv6"
#order += "wireless _first_"
order += "ethernet _first_"
order += "cpu_usage"
order += "memory"
order += "disk /"
#order += "tztime local"
#order += "battery all"

#wireless _first_ {
