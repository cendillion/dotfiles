unbind-key all
unbind-mouse all

# Set default Xft(3) font
fontname "sans-serif:pixelsize=14:bold"

# Turn on sticky-group mode
sticky yes

# Any entry here is shown in the application menu
command firefox         firefox
command xmms            xmms
command top             "xterm -e top"

# Autogroup definitions
autogroup 3 "aterm,XTerm"
autogroup 3 "xterm,XTerm"

# Ignore programs by that name by not drawing borders around them.
ignore XMMS
ignore xwi
ignore xapm
ignore xclock

# Key bindings
bind-key 4-q            window-close
bind-key C4S-q          quit
bind-key 4S-r           restart

bind-key 4-space        window-menu-label
bind-key 4-Tab          window-cycle
bind-key C4-Tab         window-rcycle

bind-key 4-Up           window-move-up-big
bind-key 4-Down         window-move-down-big
bind-key 4-Right        window-move-right-big
bind-key 4-Left         window-move-left-big

bind-key 4-p            window-raise
bind-key 4S-p           window-lower

bind-key 4-m            window-maximize
bind-key 4-v            window-vmaximize
bind-key 4-h            window-hmaximize

bind-key 4-1            group-only-1
bind-key 4-2            group-only-2
bind-key 4-3            group-only-3
bind-key 4S-1           window-movetogroup-1
bind-key 4S-2           window-movetogroup-2
bind-key 4S-3           window-movetogroup-3
#unbind-key 4-o
#unbind-key C4-equal
#unbind-key C4S-equal

# Mouse bindings
bind-mouse 4-1          window-move
bind-mouse 4-2          window-lower
bind-mouse 4-3          window-resize
